    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <configuration>
                        <fork>true</fork>
                        <skip>${spring.boot.plugin.disabled}</skip>
                        <jmxPort>0</jmxPort>
                        <excludes>
                            <exclude>
                                <groupId>org.projectlombok</groupId>
                                <artifactId>lombok</artifactId>
                            </exclude>
                        </excludes>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.openapitools</groupId>
                    <artifactId>openapi-generator-maven-plugin</artifactId>
                    <version>7.10.0</version>
                    <executions>
                        <execution>
                            <id>openapi-server-code-gen</id>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <configuration>
                                <skip>${openapi.codegen.v3.skipServer}</skip>
                                <inputSpec>${openapi.codegen.v3.inputSpec}/${schemaName}-schema.yaml</inputSpec>
                                <output>${project.basedir}/${openapi-generated-sources}</output>
                                <generatorName>spring</generatorName>
                                <basePackage>${module.java.defaultPackage}</basePackage>
                                <modelPackage>${default.package}.dto</modelPackage>
                                <apiPackage>${default.package}.api</apiPackage>
                                <modelNameSuffix>Dto</modelNameSuffix>
                                <generateApis>true</generateApis>
                                <generateModels>true</generateModels>
                                <generateApiTests>false</generateApiTests>
                                <generateModelTests>false</generateModelTests>
                                <generateSupportingFiles>true</generateSupportingFiles>
                                <configOptions>
                                    <useSpringBoot3>true</useSpringBoot3>
                                    <library>spring-boot</library>
                                    <sourceFolder>main/java</sourceFolder>
                                    <dateLibrary>java8</dateLibrary>
                                    <java8>true</java8>
                                    <delegatePattern>true</delegatePattern>
                                    <interfaceOnly>true</interfaceOnly>
                                    <useBeanValidation>true</useBeanValidation>
                                    <serializableModel>true</serializableModel>
                                    <serializationLibrary>jackson</serializationLibrary>
                                    <useTags>true</useTags>
                                    <legacyDiscriminatorBehavior>false</legacyDiscriminatorBehavior>
                                    <additionalModelTypeAnnotations>
                                        @lombok.Getter
                                        @lombok.extern.jackson.Jacksonized
                                    </additionalModelTypeAnnotations>
                                </configOptions>
                            </configuration>
                        </execution>
                        <execution>
                            <id>restClient-generation</id>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <configuration>
                                <skip>${openapi.codegen.v3.skipClient}</skip>
                                <inputSpec>${openapi.codegen.v3.inputSpec}/${schemaName}-schema.yaml</inputSpec>
                                <output>${project.basedir}/${openapi-generated-sources}</output>
                                <generatorName>java</generatorName>
                                <basePackage>${module.java.defaultPackage}</basePackage>
                                <modelPackage>${module.java.defaultPackage}.dto</modelPackage>
                                <apiPackage>${module.java.defaultPackage}.api</apiPackage>
                                <invokerPackage>${module.java.defaultPackage}.client</invokerPackage>
                                <modelNameSuffix>Dto</modelNameSuffix>
                                <generateApis>true</generateApis>
                                <generateModels>true</generateModels>
                                <generateApiTests>false</generateApiTests>
                                <generateModelTests>false</generateModelTests>
                                <withXml>true</withXml>
                                <generateSupportingFiles>true</generateSupportingFiles>
                                <configOptions>
                                    <interfaceOnly>true</interfaceOnly>
                                    <sourceFolder>main/java</sourceFolder>
                                    <library>resttemplate</library>
                                    <useBeanValidation>true</useBeanValidation>
                                    <serializableModel>true</serializableModel>
                                    <serializationLibrary>jackson</serializationLibrary>
                                    <dateLibrary>java8</dateLibrary>
                                    <java8>true</java8>
                                    <useTags>true</useTags>
                                    <legacyDiscriminatorBehavior>false</legacyDiscriminatorBehavior>
                                    <additionalModelTypeAnnotations>
                                        @lombok.Getter
                                        @lombok.extern.jackson.Jacksonized
                                    </additionalModelTypeAnnotations>
                                </configOptions>
                            </configuration>
                        </execution>
                        <execution>
                            <id>generateCarriers</id>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <configuration>
                                <skip>${openapi.codegen.v3.skipTypeScript}</skip>
                                <inputSpec>${openapi.codegen.v3.inputSpec}/${schemaName}-schema.yaml</inputSpec>
                                <output>typings</output>
                                <generatorName>typescript-angular</generatorName>
                                <generateSupportingFiles>false</generateSupportingFiles>
                                <generateApis>true</generateApis>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>add-generated-sources</id>
                            <phase>generate-sources</phase>
