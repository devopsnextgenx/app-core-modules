<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="SYSTEM_ADMINISTRATOR"
          class="io.devopsnextgenx.microservices.modules.security.models.Role">
        <property name="name" value="SYSTEM_ADMINISTRATOR"/>
        <property name="externalId" value="ROLE-0000"/>
    </bean>

    <bean id="ORGANIZATION_ADMINISTRATOR"
          class="io.devopsnextgenx.microservices.modules.security.models.Role">
        <property name="name" value="ORGANIZATION_ADMINISTRATOR"/>
        <property name="externalId" value="ROLE-0001"/>
    </bean>
    <bean id="COMPANY_ADMINISTRATOR"
          class="io.devopsnextgenx.microservices.modules.security.models.Role">
        <property name="name" value="COMPANY_ADMINISTRATOR"/>
        <property name="externalId" value="ROLE-0002"/>
    </bean>
    <bean id="DATA_MANAGER"
          class="io.devopsnextgenx.microservices.modules.security.models.Role">
        <property name="name" value="DATA_MANAGER"/>
        <property name="externalId" value="ROLE-0003"/>
    </bean>
    <bean id="SERVICE_ACCOUNT"
          class="io.devopsnextgenx.microservices.modules.security.models.Role">
        <property name="name" value="SERVICE_ACCOUNT"/>
        <property name="externalId" value="ROLE-0004"/>
    </bean>
</beans>