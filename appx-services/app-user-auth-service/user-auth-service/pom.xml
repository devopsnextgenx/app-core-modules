    <build>
        <plugins>
            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <version>3.1.8</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <locations>${base.package}.userauth.*</locations>
                            <swaggerDirectory>${project.basedir}/swagger</swaggerDirectory>
                            <info>
                                <title>K8Clusters Apis</title>
                                <description>K8Clusters Api Collections</description>
                                <version>1.0.0</version>
                            </info>
                            <springmvc>true</springmvc>
                            <outputFormats>yaml</outputFormats>
                        </apiSource>
                    </apiSources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.swagger.codegen.v3</groupId>
                <artifactId>swagger-codegen-maven-plugin</artifactId>
                <version>3.0.19</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <id>angular-generation</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/swagger/swagger.yaml</inputSpec>
                            <language>typescript-angular</language>
                            <output>target/user-auth-api-angular</output>
                            <configOptions>
                                <npmName>${npm.k8clusters.scope.name}/${project.artifactId}</npmName>
                                <npmVersion>1.0.3</npmVersion>
                                <providedInRoot>true</providedInRoot>
                                <npmRegistry>https://npm.pkg.github.com/amitkshirsagar13</npmRegistry>
                                <templateDirectory>${basedir}/src/main/resources</templateDirectory>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
